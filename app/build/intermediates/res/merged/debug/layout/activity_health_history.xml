<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".HealthHistory">

    <include layout="@layout/toolbar"/>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/activity_horizontal_margin"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="@string/health_hist_1"/>
            <EditText
                android:inputType="textMultiLine"
                android:minLines="4"
                android:gravity="top|left"
                android:maxLines="10"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:id="@+id/presentIllness"
                android:scrollbars="vertical" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="@string/health_hist_2"/>
            <EditText
                android:inputType="textMultiLine"
                android:minLines="4"
                android:gravity="top|left"
                android:maxLines="10"
                android:textColor="@color/black"
                android:id="@+id/previousIlliness"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:scrollbars="vertical" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="@string/health_hist_3"/>
            <EditText
                android:inputType="textMultiLine"
                android:minLines="4"
                android:gravity="top|left"
                android:maxLines="10"
                android:textColor="@color/black"
                android:id="@+id/drugHistory"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:scrollbars="vertical" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="@string/health_hist_4"/>
            <EditText
                android:inputType="textMultiLine"
                android:minLines="4"
                android:gravity="top|left"
                android:maxLines="10"
                android:textColor="@color/black"
                android:id="@+id/allergies"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:scrollbars="vertical" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="@string/health_hist_5"/>
            <EditText
                android:inputType="textMultiLine"
                android:minLines="4"
                android:gravity="top|left"
                android:maxLines="10"
                android:textColor="@color/black"
                android:id="@+id/personalHistory"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:scrollbars="vertical"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="@string/health_hist_6"/>
            <EditText
                android:inputType="textMultiLine"
                android:minLines="4"
                android:id="@+id/menstrualhistory"
                android:gravity="top|left"
                android:maxLines="10"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:scrollbars="vertical"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="@string/health_hist_7"/>
            <EditText
                android:inputType="textMultiLine"
                android:minLines="4"
                android:id="@+id/socialhistory"
                android:gravity="top|left"
                android:maxLines="10"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:scrollbars="vertical" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="@string/health_hist_8"/>
            <EditText
                android:inputType="textMultiLine"
                android:minLines="4"
                android:textColor="@color/black"
                android:id="@+id/familyhistory"
                android:gravity="top|left"
                android:maxLines="10"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:scrollbars="vertical" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="@string/health_hist_9"/>
            <EditText
                android:inputType="textMultiLine"
                android:minLines="4"
                android:gravity="top|left"
                android:maxLines="10"
                android:textColor="@color/black"
                android:id="@+id/systemreview"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:scrollbars="vertical" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="@string/health_hist_10"/>
            <EditText
                android:inputType="textMultiLine"
                android:minLines="5"
                android:id="@+id/summary"
                android:gravity="top|left"
                android:textColor="@color/black"
                android:maxLines="11"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:scrollbars="vertical" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:id="@+id/htpdlbl"
                android:textColor="@color/black"
                android:text="@string/prov_diag"/>
            <EditText
                android:inputType="textMultiLine"
                android:minLines="5"
                android:id="@+id/provisionalDiagnosis"
                android:gravity="top|left"
                android:maxLines="11"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:scrollbars="vertical" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:id="@+id/htfdlbl"
                android:textColor="@color/black"
                android:text="@string/fnl_diag"/>
            <EditText
                android:inputType="textMultiLine"
                android:minLines="5"
                android:id="@+id/finalDiagnosis"
                android:gravity="top|left"
                android:maxLines="11"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:scrollbars="vertical" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Save"
                android:textStyle="bold"
                android:shadowColor="#EBEBEB"
                android:textColor="@color/white"
                android:background="@color/button_background"
                android:id="@+id/button"
                android:layout_marginTop="5dp" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
