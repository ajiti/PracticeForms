<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include layout="@layout/toolbar"/>

    <TextView
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:text="Investigation-Pathology" android:gravity="center"
        android:textStyle="bold" android:textColor="#000"
        android:background="#FFF" android:textSize="17dp"
        android:visibility="gone" android:id="@+id/pathhead"/>

    <ExpandableListView
        android:id="@+id/in_path"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_marginRight="10dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save"
        android:textStyle="bold"
        android:shadowColor="#EBEBEB"
        android:textColor="#FFFFFF"
        android:background="#3cb5c0"
        android:id="@+id/inpsave"
        android:layout_margin="10dp" />

</LinearLayout>