<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="13dp"
    android:paddingBottom="13dp"
    tools:context=".GeneralExaminationActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/general">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="Consciousness"/>
            <EditText
                android:inputType="textMultiLine"
                android:minLines="4"
                android:gravity="top|left"
                android:textColor="@color/black"
                android:textColorHint="@color/white"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:id="@+id/consciousness"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="Mental State"/>
            <EditText
                android:inputType="textMultiLine"
                android:minLines="4"
                android:gravity="top|left"
                android:textColor="@color/black"
                android:textColorHint="@color/white"
                android:id="@+id/mental_state"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="General Appearance"/>
            <EditText
                android:inputType="textMultiLine"
                android:minLines="4"
                android:gravity="top|left"
                android:textColor="@color/black"
                android:textColorHint="@color/white"
                android:id="@+id/general_appearance"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="Pallor"/>
            <EditText
                android:inputType="textMultiLine"
                android:minLines="4"
                android:gravity="top|left"
                android:textColor="@color/black"
                android:textColorHint="@color/white"
                android:id="@+id/pallor"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="Icterus"/>
            <EditText
                android:inputType="textMultiLine"
                android:minLines="4"
                android:gravity="top|left"
                android:textColor="@color/black"
                android:textColorHint="@color/white"
                android:id="@+id/icterus"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="Cyanosis"/>
            <EditText
                android:inputType="textMultiLine"
                android:minLines="4"
                android:id="@+id/cyanosis"
                android:gravity="top|left"
                android:textColor="@color/black"
                android:textColorHint="@color/white"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="Clubbing"/>
            <EditText
                android:inputType="textMultiLine"
                android:minLines="4"
                android:id="@+id/clubbing"
                android:gravity="top|left"
                android:textColor="@color/black"
                android:textColorHint="@color/white"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="Lymph Adenopathy"/>
            <EditText
                android:inputType="textMultiLine"
                android:minLines="4"
                android:textColor="@color/black"
                android:textColorHint="@color/white"
                android:id="@+id/lymph_adenopathy"
                android:gravity="top|left"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="Edema"/>
            <EditText
                android:inputType="textMultiLine"
                android:minLines="4"
                android:gravity="top|left"
                android:textColor="@color/black"
                android:textColorHint="@color/white"
                android:id="@+id/edema"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/vital">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="Temperature(oF)"/>
            <EditText
                android:inputType="textMultiLine"
                android:minLines="4"
                android:gravity="top|left"
                android:textColor="@color/black"
                android:textColorHint="@color/white"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:id="@+id/temperature"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="Pulse(b/m)"/>
            <EditText
                android:inputType="textMultiLine"
                android:minLines="4"
                android:gravity="top|left"
                android:textColor="@color/black"
                android:textColorHint="@color/white"
                android:id="@+id/pulse"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="Respiration(c/m)"/>
            <EditText
                android:inputType="textMultiLine"
                android:minLines="4"
                android:gravity="top|left"
                android:textColor="@color/black"
                android:textColorHint="@color/white"
                android:id="@+id/respiration"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="Blood Pressure(mm/hg)"/>
            <EditText
                android:inputType="textMultiLine"
                android:minLines="4"
                android:gravity="top|left"
                android:textColor="@color/black"
                android:textColorHint="@color/white"
                android:id="@+id/blood_pressure"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/amthropometry">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="Height(meters)"/>
            <EditText
                android:inputType="textMultiLine"
                android:minLines="4"
                android:gravity="top|left"
                android:textColor="@color/black"
                android:textColorHint="@color/white"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:id="@+id/height"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="Weight(kg)"/>
            <EditText
                android:inputType="textMultiLine"
                android:minLines="4"
                android:gravity="top|left"
                android:textColor="@color/black"
                android:textColorHint="@color/white"
                android:id="@+id/weight"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="Body Mass Index(BMI)-(kg/m2)"/>
            <EditText
                android:inputType="textMultiLine"
                android:minLines="4"
                android:gravity="top|left"
                android:textColor="@color/black"
                android:textColorHint="@color/white"
                android:id="@+id/bmi"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="Mid-Arm Circumference(in children)-(cm)"/>
            <EditText
                android:inputType="textMultiLine"
                android:minLines="4"
                android:gravity="top|left"
                android:textColor="@color/black"
                android:textColorHint="@color/white"
                android:id="@+id/mac"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="Head Circumference(in children)-(cm)"/>
            <EditText
                android:inputType="textMultiLine"
                android:minLines="4"
                android:gravity="top|left"
                android:textColor="@color/black"
                android:textColorHint="@color/white"
                android:id="@+id/hc"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"/>
        </LinearLayout>

</LinearLayout>