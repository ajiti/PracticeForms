<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HealthHistory">

    <include layout="@layout/toolbar"/>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:padding="@dimen/activity_horizontal_margin"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#000000"
                android:text="1) History Of Present illness"/>
            <EditText
                android:inputType="textMultiLine"
                android:lines="4"
                android:minLines="4"
                android:gravity="top|left"
                android:maxLines="10"
                android:textColor="#000000"
                android:textColorHint="#FFFFFF"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:id="@+id/presentIllness"
                android:scrollbars="vertical" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#000000"
                android:text="2) History of previous illness(Medical/Surgical)"/>
            <EditText
                android:inputType="textMultiLine"
                android:lines="4"
                android:minLines="4"
                android:gravity="top|left"
                android:maxLines="10"
                android:textColor="#000000"
                android:id="@+id/previousIlliness"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:scrollbars="vertical" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#000000"
                android:text="3)Drug History"/>
            <EditText
                android:inputType="textMultiLine"
                android:lines="4"
                android:minLines="4"
                android:gravity="top|left"
                android:maxLines="10"
                android:textColor="#000000"
                android:id="@+id/drugHistory"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:scrollbars="vertical" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#000000"
                android:text="4)History of Allergies and Adverse Reactions"/>
            <EditText
                android:inputType="textMultiLine"
                android:lines="4"
                android:minLines="4"
                android:gravity="top|left"
                android:maxLines="10"
                android:textColor="#000000"
                android:id="@+id/allergies"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:scrollbars="vertical" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#000000"
                android:text="5)Personal History"/>
            <EditText
                android:inputType="textMultiLine"
                android:lines="4"
                android:minLines="4"
                android:gravity="top|left"
                android:maxLines="10"
                android:textColor="#000000"
                android:id="@+id/personalHistory"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:scrollbars="vertical" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#000000"
                android:text="6)Menstrual History(Female)"/>
            <EditText
                android:inputType="textMultiLine"
                android:lines="4"
                android:minLines="4"
                android:id="@+id/menstrualhistory"
                android:gravity="top|left"
                android:maxLines="10"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:scrollbars="vertical" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#000000"
                android:text="7)Social History"/>
            <EditText
                android:inputType="textMultiLine"
                android:lines="4"
                android:minLines="4"
                android:id="@+id/socialhistory"
                android:gravity="top|left"
                android:maxLines="10"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:scrollbars="vertical" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#000000"
                android:text="8)Family History"/>
            <EditText
                android:inputType="textMultiLine"
                android:lines="4"
                android:minLines="4"
                android:textColor="#000000"
                android:id="@+id/familyhistory"
                android:gravity="top|left"
                android:maxLines="10"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:scrollbars="vertical" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#000000"
                android:text="9)Systems Review(General,Cardiovascular,Respiratory,Gastrointestinal,Neurological,Genitourinary,Musculoskeletal)"/>
            <EditText
                android:inputType="textMultiLine"
                android:lines="4"
                android:minLines="4"
                android:gravity="top|left"
                android:maxLines="10"
                android:textColor="#000000"
                android:id="@+id/systemreview"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:scrollbars="vertical" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#000000"
                android:text="Summary"/>
            <EditText
                android:inputType="textMultiLine"
                android:lines="5"
                android:minLines="5"
                android:id="@+id/summary"
                android:gravity="top|left"
                android:textColor="#000000"
                android:maxLines="11"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:scrollbars="vertical" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:id="@+id/htpdlbl"
                android:textColor="#000000"
                android:text="Provisional Diagnosis"/>
            <EditText
                android:inputType="textMultiLine"
                android:lines="5"
                android:minLines="5"
                android:id="@+id/provisionalDiagnosis"
                android:gravity="top|left"
                android:maxLines="11"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:scrollbars="vertical" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:id="@+id/htfdlbl"
                android:textColor="#000000"
                android:text="Final Diagnosis"/>
            <EditText
                android:inputType="textMultiLine"
                android:lines="5"
                android:minLines="5"
                android:id="@+id/finalDiagnosis"
                android:gravity="top|left"
                android:maxLines="11"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:scrollbars="vertical" />

<!--            <LinearLayout
                android:id="@+id/upload_block"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:weightSum="1"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/file_path"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
