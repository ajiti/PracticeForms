<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="fill_parent"
        android:id="@+id/mainrecord"
        android:layout_height="wrap_content" android:orientation="horizontal" android:weightSum="1">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" android:layout_weight=".85" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/patientNamelabel"
                android:textStyle="bold"
                android:textColor="#3cb5c0"
                android:text="Patient Name :"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:id="@+id/patientName"/>

<!--            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Health Reg No :"
                android:textColor="#3cb5c0"
                android:textStyle="bold"
                android:id="@+id/regnLinkId_label"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:id="@+id/regnLinkId" />-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Case Record No:"
                android:textStyle="bold"
                android:textColor="#3cb5c0"
                android:id="@+id/caserecordno_label" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:id="@+id/caserecordno" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Final Diagnosis :"
                android:textStyle="bold"
                android:textColor="#3cb5c0"
                android:id="@+id/finaldiagnosis_label" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:id="@+id/finaldiagnosis" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Provisional Diagnosis:"
                android:textStyle="bold"
                android:textColor="#3cb5c0"
                android:id="@+id/provisionalanalysis_label" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:id="@+id/provisionalanalysis" />

        </LinearLayout>

        <Button
            android:layout_height="30dp"
            android:layout_width="wrap_content"
            android:textSize="18dp"
            android:text="View"
            android:textColor="#FFFFFF"
            android:id="@+id/caserecordfrms"
            android:textAllCaps="false"
            android:layout_marginRight="15dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="19dp"
            android:shadowColor="#FFFFFF"
            android:shadowRadius="1.0"
            android:background="#3cb5c0" />
    </LinearLayout>

</RelativeLayout>