<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="13dp"
    android:paddingBottom="13dp"
    tools:context=".DischargeSheetActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/admission_Details">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Method of Admission"/>
        <EditText
            android:inputType="textMultiLine"
            android:minLines="4"
            android:gravity="top|left"
            android:textColor="@color/black"
            android:textColorHint="@color/white"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/method_Admission"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Source of Admission"/>
        <EditText
            android:inputType="textMultiLine"
            android:minLines="4"
            android:gravity="top|left"
            android:textColor="@color/black"
            android:textColorHint="@color/white"
            android:id="@+id/source_Admission"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Hospital Site"/>
        <EditText
            android:inputType="textMultiLine"
            android:minLines="4"
            android:gravity="top|left"
            android:textColor="@color/black"
            android:textColorHint="@color/white"
            android:id="@+id/hospital_Site"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Responsible Trust"/>
        <EditText
            android:inputType="textMultiLine"
            android:minLines="4"
            android:gravity="top|left"
            android:textColor="@color/black"
            android:textColorHint="@color/white"
            android:id="@+id/responsible_Trust"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Date of Admission"/>
        <EditText
            android:inputType="textMultiLine"
            android:minLines="4"
            android:gravity="top|left"
            android:textColor="@color/black"
            android:textColorHint="@color/white"
            android:id="@+id/date_Admission"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Time of Admission"/>
        <EditText
            android:inputType="textMultiLine"
            android:minLines="4"
            android:id="@+id/time_Admission"
            android:gravity="top|left"
            android:textColor="@color/black"
            android:textColorHint="@color/white"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/discharge_Details">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Date Of Discharge"/>
        <EditText
            android:inputType="textMultiLine"
            android:minLines="4"
            android:gravity="top|left"
            android:textColor="@color/black"
            android:textColorHint="@color/white"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/date_Discharge"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Time Of Discharge"/>
        <EditText
            android:inputType="textMultiLine"
            android:minLines="4"
            android:gravity="top|left"
            android:textColor="@color/black"
            android:textColorHint="@color/white"
            android:id="@+id/time_Discharge"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Discharge Method"/>
        <EditText
            android:inputType="textMultiLine"
            android:minLines="4"
            android:gravity="top|left"
            android:textColor="@color/black"
            android:textColorHint="@color/white"
            android:id="@+id/discharge_Method"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Discharge Destination"/>
        <EditText
            android:inputType="textMultiLine"
            android:minLines="4"
            android:gravity="top|left"
            android:textColor="@color/black"
            android:textColorHint="@color/white"
            android:id="@+id/discharge_Destination"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Discharge Consultant"/>
        <EditText
            android:inputType="textMultiLine"
            android:minLines="4"
            android:gravity="top|left"
            android:textColor="@color/black"
            android:textColorHint="@color/white"
            android:id="@+id/discharge_Consultant"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Discharge Specialty/Department"/>
        <EditText
            android:inputType="textMultiLine"
            android:minLines="4"
            android:gravity="top|left"
            android:textColor="@color/black"
            android:textColorHint="@color/white"
            android:id="@+id/dischargeSpecialty_department"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/clinicInformation">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Diagnosis at Discharge"/>
        <EditText
            android:inputType="textMultiLine"
            android:minLines="4"
            android:gravity="top|left"
            android:textColor="@color/black"
            android:textColorHint="@color/white"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/diagnosis_discharge"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Operations and Procedures"/>
        <EditText
            android:inputType="textMultiLine"
            android:minLines="4"
            android:gravity="top|left"
            android:textColor="@color/black"
            android:textColorHint="@color/white"
            android:id="@+id/operations_procedures"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Reason for Admission and Presenting Complaints"/>
        <EditText
            android:inputType="textMultiLine"
            android:minLines="4"
            android:gravity="top|left"
            android:textColor="@color/black"
            android:textColorHint="@color/white"
            android:id="@+id/admission_complaints"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Mental Capacity"/>
        <EditText
            android:inputType="textMultiLine"
            android:minLines="4"
            android:gravity="top|left"
            android:textColor="@color/black"
            android:textColorHint="@color/white"
            android:id="@+id/mental_capacity"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Advance decisions to refuse treatment and resuscitation status"/>
        <EditText
            android:inputType="textMultiLine"
            android:minLines="4"
            android:gravity="top|left"
            android:textColor="@color/black"
            android:textColorHint="@color/white"
            android:id="@+id/treatment_resuscitation"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Allergies"/>
        <EditText
            android:inputType="textMultiLine"
            android:minLines="4"
            android:gravity="top|left"
            android:textColor="@color/black"
            android:textColorHint="@color/white"
            android:id="@+id/allergies"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Risks And Warnings"/>
        <EditText
            android:inputType="textMultiLine"
            android:minLines="4"
            android:gravity="top|left"
            android:textColor="@color/black"
            android:textColorHint="@color/white"
            android:id="@+id/risks_warnings"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Clinical Narrative"/>
        <EditText
            android:inputType="textMultiLine"
            android:minLines="4"
            android:gravity="top|left"
            android:textColor="@color/black"
            android:textColorHint="@color/white"
            android:id="@+id/clinical_narrative"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Relevant Investigations and Results"/>
        <EditText
            android:inputType="textMultiLine"
            android:minLines="4"
            android:gravity="top|left"
            android:textColor="@color/black"
            android:textColorHint="@color/white"
            android:id="@+id/investigations_results"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Relevant treatment and changes made to treatments"/>
        <EditText
            android:inputType="textMultiLine"
            android:minLines="4"
            android:gravity="top|left"
            android:textColor="@color/black"
            android:textColorHint="@color/white"
            android:id="@+id/treatment_treatments"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Measures of Physical ability and cognitive functional"/>
        <EditText
            android:inputType="textMultiLine"
            android:minLines="4"
            android:gravity="top|left"
            android:textColor="@color/black"
            android:textColorHint="@color/white"
            android:id="@+id/physical_cognitive"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Medication Changes"/>
        <EditText
            android:inputType="textMultiLine"
            android:minLines="4"
            android:gravity="top|left"
            android:textColor="@color/black"
            android:textColorHint="@color/white"
            android:id="@+id/medication_changes"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Discharge Medications"/>
        <EditText
            android:inputType="textMultiLine"
            android:minLines="4"
            android:gravity="top|left"
            android:textColor="@color/black"
            android:textColorHint="@color/white"
            android:id="@+id/discharge_medications"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Medication Recommendations"/>
        <EditText
            android:inputType="textMultiLine"
            android:minLines="4"
            android:gravity="top|left"
            android:textColor="@color/black"
            android:textColorHint="@color/white"
            android:id="@+id/medication_recommendations"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/advice_recommendations_futureplan">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Hospital(Actions required and planned)"/>
        <EditText
            android:inputType="textMultiLine"
            android:minLines="4"
            android:gravity="top|left"
            android:textColor="@color/black"
            android:textColorHint="@color/white"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/hospital_actions"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="GP(Actions required)"/>
        <EditText
            android:inputType="textMultiLine"
            android:minLines="4"
            android:gravity="top|left"
            android:textColor="@color/black"
            android:textColorHint="@color/white"
            android:id="@+id/gp_actions"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Community and specialist services (actions requested/planned/agreed)"/>
        <EditText
            android:inputType="textMultiLine"
            android:minLines="4"
            android:gravity="top|left"
            android:textColor="@color/black"
            android:textColorHint="@color/white"
            android:id="@+id/community_specialist"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Information given to patient and/or authorized representative"/>
        <EditText
            android:inputType="textMultiLine"
            android:minLines="4"
            android:gravity="top|left"
            android:textColor="@color/black"
            android:textColorHint="@color/white"
            android:id="@+id/information_patient_authorized"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Patient's concerns,expectations and wishes"/>
        <EditText
            android:inputType="textMultiLine"
            android:minLines="4"
            android:gravity="top|left"
            android:textColor="@color/black"
            android:textColorHint="@color/white"
            android:id="@+id/patient_con_exp_wishes"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Results awaited"/>
        <EditText
            android:inputType="textMultiLine"
            android:minLines="4"
            android:id="@+id/results_awaited"
            android:gravity="top|left"
            android:textColor="@color/black"
            android:textColorHint="@color/white"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"/>
    </LinearLayout>

</LinearLayout>